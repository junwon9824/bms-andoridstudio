<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#7DB249"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/choosetxtsnd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="33dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="마을등록" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/person_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_below="@id/toolbar"
            android:background="#95BCF2"
            >

<!--

            &lt;!&ndash; 방송 삭제 비활성화 &ndash;&gt;
            <ImageButton
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="#95BCF2"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/plus_symbol"
                app:tint="#990000" />
-->

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_marginBottom="20dp"

            android:orientation="vertical">

            <ListView
                android:id="@+id/villlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice_title" />




        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="send"
            android:textSize="22dp"
            android:id="@+id/reg_button"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>