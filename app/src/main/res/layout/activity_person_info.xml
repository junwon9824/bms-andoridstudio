<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:text="ㅇㅇ마을 ㅇㅇㅇ님"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/actionbar"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_logout" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingHorizontal="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/caregiveradd"
                android:layout_width="111dp"
                android:hint="보호자등록"
                android:layout_marginRight="22dp"
                android:layout_height="111dp" />

            <Button
                android:id="@+id/villageadd"
                android:layout_width="111dp"
                android:hint="마을등록"
                android:layout_height="111dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:text="내 정보"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_name"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="이름 : " />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_relation"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="관계 : " />

            <TextView
                android:id="@+id/rela"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  " />

        </LinearLayout>



        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/info_address"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="주소 : " />

            <TextView
                android:id="@+id/addre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/info_phone"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="연락처 : " />

            <TextView
                android:id="@+id/phon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/info_email"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="이메일 : " />

            <TextView
                android:id="@+id/emai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/info_regislation"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="등록일 : " />

            <TextView
                android:id="@+id/regis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  " />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/guard_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp">

        <TextView
            android:id="@+id/info_guard_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="ㅇㅇㅇ님(단말기)" />

        <TextView
            android:id="@+id/info_guard_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="나이 : " />

        <TextView
            android:id="@+id/info_guard_device"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="단말기 : " />

        <TextView
            android:id="@+id/info_guard_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="주소 : " />

        <TextView
            android:id="@+id/info_guard_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="연락처 : " />

        <TextView
            android:id="@+id/info_guard_regislation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="등록일 : " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/guard_data"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/round_rec_button"
            android:backgroundTint="#BABABA"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="회원 탈퇴하기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>