<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:text="ㅇㅇ마을 ㅇㅇㅇ님"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/actionbar"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/info_title"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="내 정보"
            android:layout_marginVertical="20dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/info_name"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="이름 : "
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/info_relation"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="관계 : "
                />

            <TextView
                android:id="@+id/rela"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">


            <TextView

                android:id="@+id/info_age"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="나이 : "
                />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/info_address"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="주소 : "
                />
            <TextView
                android:id="@+id/addre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/info_phone"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="연락처 : "
                />

            <TextView
                android:id="@+id/phon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/info_email"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="이메일 : "
                />
            <TextView
                android:id="@+id/emai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="111dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/info_regislation"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:text="등록일 : "
                />
            <TextView
                android:id="@+id/regis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0  "
                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/guard_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/info_guard_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ㅇㅇㅇ님(단말기)"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/info_guard_age"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="나이 : "
            />
        <TextView
            android:id="@+id/info_guard_device"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="단말기 : "
            />
        <TextView
            android:id="@+id/info_guard_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="주소 : "
            />
        <TextView
            android:id="@+id/info_guard_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="연락처 : "
            />
        <TextView
            android:id="@+id/info_guard_regislation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="등록일 : "
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/guard_data"
            android:text="회원 탈퇴하기"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/round_rec_button"
            android:backgroundTint="#BABABA"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:visibility="visible"
            />
    </LinearLayout>
</LinearLayout>